@model Discografia.Models.Artist
@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Artista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <h3>Comentarios</h3>
    <a class="btn btn-primary" asp-controller="Reviews" asp-action="Create" asp-route-id="@Model?.ArtistId">Nuevo comentario</a>
</div>
<br/>
<div>
    @foreach (var item in ViewBag.Reviews) //LOS @item.variable no te salen, pero igualmente los ponemos y los detecta
    {
     <div class="shadow p-3 mb-5 bg-white rounded">
        <h4 class="font-weight-bold">@item.Title</h4>
        <p>@item.Description</p>
        <div>
           @for (int e = 0; e < item.Points; e++)
             {
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="orange" class="bi bi-star-fill" viewBox="0 0 16 16">
                 <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
               </svg>
             }
           @for (int a = item.Points; a < 5; a++)
             {
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                   <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
               </svg>
             }
        </div>
     </div>
     <br/>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArtistId">Edit</a> |
    <a asp-action="Index">Volver al listado</a>
</div>
<div>
    
</div>
